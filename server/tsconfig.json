    "target": "ES2022",
    "outDir": "../dist/server",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "moduleResolution": "bundler"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "../shared" }
  ]
}